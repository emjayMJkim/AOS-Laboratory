<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.puzzling.aoslaboratory.presentation.register.RegisterViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".presentation.register.RegisterActivity">

        <Toolbar
            android:id="@+id/tb_registerTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_close_24"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="프로젝트 등록하기"
                android:gravity="center"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginStart="80dp"
                />

        </Toolbar>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/tb_registerTitle"
            app:layout_constraintBottom_toTopOf="@id/layout_bt_register"
            >

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <TextView
                        android:id="@+id/tv_registerName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:text="프로젝트 이름"
                        android:textStyle="bold"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textLayout_registerName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginHorizontal="40dp"
                        app:counterEnabled="true"
                        app:counterMaxLength="10"
                        app:layout_constraintTop_toBottomOf="@id/tv_registerName"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="프로젝트 이름을 설정해주세요"
                            android:text="@={viewModel.projectName}"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/tv_introduction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:text="프로젝트 한줄소개"
                        android:textStyle="bold"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        app:layout_constraintTop_toBottomOf="@id/textLayout_registerName"
                        app:layout_constraintStart_toStartOf="parent"
                        />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textLayout_introduction"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginHorizontal="40dp"
                        app:counterEnabled="true"
                        app:counterMaxLength="50"
                        app:layout_constraintTop_toBottomOf="@id/tv_introduction"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="프로젝트에 대해 간단히 소개해 주세요"
                            android:text="@={viewModel.projectExplanation}"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:id="@+id/linerLayout_startDate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        app:layout_constraintTop_toBottomOf="@id/textLayout_introduction"
                        app:layout_constraintStart_toStartOf="parent">

                        <TextView
                            android:id="@+id/tv_startDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16dp"
                            android:text="프로젝트 시작날짜"
                            android:layout_margin="10dp"
                            android:textStyle="bold"
                            />

                        <TextView
                            android:id="@+id/tv_dateDropDown"
                            android:hint="0000/00/00"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"

                            />

                        <ImageButton
                            android:id="@+id/btn_dateDropDown"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:src="@drawable/baseline_arrow_drop_down_24"

                            />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_role"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:text="내 역할"
                        android:textStyle="bold"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        app:layout_constraintTop_toBottomOf="@id/linerLayout_startDate"
                        app:layout_constraintStart_toStartOf="parent"
                        />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textLayout_role"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginHorizontal="40dp"
                        app:counterEnabled="true"
                        app:counterMaxLength="20"
                        app:layout_constraintTop_toBottomOf="@id/tv_role"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="역할을 입력해 주세요(ex. ios 개발자)"
                            android:text="@={viewModel.role}"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/tv_nickName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:text="닉네임 입력"
                        android:textStyle="bold"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        app:layout_constraintTop_toBottomOf="@id/textLayout_role"
                        app:layout_constraintStart_toStartOf="parent"
                        />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textLayout_nickName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginHorizontal="40dp"
                        app:counterEnabled="true"
                        app:counterMaxLength="10"
                        app:layout_constraintTop_toBottomOf="@id/tv_nickName"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="닉네임을 입력해 주세요"
                            android:text="@={viewModel.nickName}"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/tv_dateCycle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:text="회고 주기"
                        android:textStyle="bold"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        app:layout_constraintTop_toBottomOf="@id/textLayout_nickName"
                        app:layout_constraintStart_toStartOf="parent"
                        />

                    <TextView
                        android:id="@+id/tv_dateCycleExplanation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:text="회고는 매주 반복되며, 중복 체크가 가능해요"
                        android:textStyle="bold"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_dateCycle"
                        app:layout_constraintStart_toStartOf="parent"
                        />

                    <LinearLayout
                        android:id="@+id/linerLayout_dateCycle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_dateCycleExplanation"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:orientation="horizontal"
                        android:choiceMode="multipleChoice"
                        >

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/bt_sunday"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:text="일"
                            android:background="@{viewModel.isDateCycleSelected ? @drawable/btn_cycle_select :  @drawable/btn_cycle_is_selected}"
                            />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/bt_monday"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:text="월"
                            android:background="@{viewModel.isDateCycleSelected ? @drawable/btn_cycle_select :  @drawable/btn_cycle_is_selected}"
                            />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/bt_tuesday"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:text="화"
                            android:background="@{viewModel.isDateCycleSelected ? @drawable/btn_cycle_select :  @drawable/btn_cycle_is_selected}"
                            />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/bt_wednesday"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:text="수"
                            android:background="@{viewModel.isDateCycleSelected ? @drawable/btn_cycle_select :  @drawable/btn_cycle_is_selected}"
                            />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/bt_thursday"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:text="목"
                            android:background="@{viewModel.isDateCycleSelected ? @drawable/btn_cycle_select :  @drawable/btn_cycle_is_selected}"
                            />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/bt_friday"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:text="금"
                            android:background="@{viewModel.isDateCycleSelected ? @drawable/btn_cycle_select :  @drawable/btn_cycle_is_selected}"
                            />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/bt_saturday"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:text="토"
                            android:background="@{viewModel.isDateCycleSelected ? @drawable/btn_cycle_select :  @drawable/btn_cycle_is_selected}"
                            />

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.core.widget.NestedScrollView>



        </androidx.constraintlayout.widget.ConstraintLayout>



        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_bt_register"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            >

            <Button
                android:id="@+id/bt_register"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:text="프로젝트 등록하기"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>